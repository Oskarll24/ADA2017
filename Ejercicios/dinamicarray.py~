from random import choice, randint

def azar(n):
    return [choice(['e', 'i']) for r in range(n)]

def burst(k, minb, maxb):
    op = 'i'
    s = []
    for b in range(k):
        s += [op for x in range(randint(minb, maxb))]
        if op == 'i':
            op = 'e'
        else:
            op = 'i'
    return s


arriba = 0.8
abajo = 0.3

def procesa(secuencia):
    costo = 0
    llenado = 0
    tamanio = 16
    for operacion in secuencia:
        if operacion == "i":
            llenado += 1
            if llenado / tamanio > arriba:
                tamanio *= 2
                costo += llenado
        else:
            llenado -= 1
            if llenado < 0:
                llenado = 0
            if llenado / tamanio < abajo:
                tamanio /= 2
                costo += llenado
    return costo

n = 1000
secuencia = azar(n)
print(len(secuencia) / procesa(secuencia))
k = 30
secuencia = burst(30, 20, 50)
print(len(secuencia) / procesa(secuencia))
